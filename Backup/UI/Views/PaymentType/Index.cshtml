@using SCMS.Resource
@model IEnumerable<SCMS.Model.PaymentType>
@{
    ViewBag.Title = Resources.Global_String_PaymentTypes + " - " + Resources.Global_String_SupplyChainManagementSystem ;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}
<div id="projectsMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">
                @Resources.Global_String_PaymentTypes</h3>
        </div>
        <div style="font-size: 13px;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.Global_String_AddNew, "Index", new { id = "Create" }, new AjaxOptions
                        {
                            UpdateTargetId = "popup-page",
                            LoadingElementId = "popup-loading",
                            Url = Url.Action("Create"),
                            OnBegin = string.Format("ShowDialogue('{0}')", Resources.Global_String_AddNew),
                            OnSuccess = "CenterPopup"
                        })
                    </td>
                    <td class="arrowLink">
                        @Html.ActionLink(Resources.Global_String_BackToGlobalSettings, "Index", "GlobalSettings")
                    </td>
                </tr>
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.Global_String_PaymentTerms, "Index", new AjaxOptions
                        {
                            UpdateTargetId = "PTDiv",
                            LoadingElementId = "loading",
                            Url = Url.Action("ListView"),
                            OnSuccess = "if (document.getElementById('table') != null) {initSorter();sorter.size(20);}"
                        })
                    </td>   
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div id="loading" style="display: none; color: Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <div id="PTDiv">
        @Html.Action("ListView")
    </div>
</div>
