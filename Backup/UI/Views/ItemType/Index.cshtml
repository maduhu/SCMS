@using SCMS.Resource
@model IEnumerable<SCMS.Model.PayrollItem>
@{
    ViewBag.Title = Resources.ItemType_Index_Title;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="budgetsMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">
                @Resources.ItemType_Index_Header</h3>
        </div>
        <div style="font-size: 13px; text-align: left;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.Global_String_AddNew, "Index", new { id = "Create" }, new AjaxOptions
                        {
                            UpdateTargetId = "PRcontent",
                            LoadingElementId = "loading",
                            Url = Url.Action("Create")
                        })
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div id="loading" style="display: none; color: Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <br />
    <div id="PRcontent" class="partialViewCard">
        @Html.Action("ListView")
    </div>
</div>
