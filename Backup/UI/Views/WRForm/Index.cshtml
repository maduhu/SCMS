@using SCMS.Resource
@{    
    ViewBag.Title = Resources.WRForm_Index_Title;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="orderRequestsMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">
                @Resources.Global_String_WarehouseReleaseOrder</h3>
        </div>
        <div style="font-size: 13px; text-align: left;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                    </td>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.Global_String_AddNew, "Index", new { id = "LoadWRF" }, new AjaxOptions
                        {
                            UpdateTargetId = "wrfDiv",
                            LoadingElementId = "loading",
                            Url = Url.Action("LoadWRF")
                        })
                    </td>
                </tr>
                <tr>
                    <td>
                    </td>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.WRForm_Index_ViewWROs, "Index", new { id = "viewWRN" }, new AjaxOptions
                        {
                            UpdateTargetId = "wrfDiv",
                            LoadingElementId = "loading",
                            Url = Url.Action("viewWRN")
                                                
                        })
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div id="loading" style="display: none; color: Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <div id="wrfDiv" style="padding-left: 2px;">
        <!-- Content goes here-->
        @Html.Action("viewWRN")
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        if (document.getElementById('table') != null) {
            initSorter();
            sorter.size(50);
        }
    });
</script>
