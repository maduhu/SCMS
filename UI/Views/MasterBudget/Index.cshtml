@using SCMS.Resource
@{
    ViewBag.Title = Resources.General_String_MasterBudget + " - " + Resources.Global_String_SupplyChainManagementSystem;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="budgetsMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">@Resources.General_String_MasterBudget</h3>
        </div>
        <div style="font-size: 13px; text-align: left;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.MasterBudget_Index_ViewMasterBudget    , "Index", new { id = "MBHeader"}, new AjaxOptions { UpdateTargetId = "budgetDiv", LoadingElementId = "loading",
                            Url = Url.Action("MBHeader")})
                    </td>
                    <td class="arrowLink">
                        @Html.ActionLink(Resources.MasterBudget_Index_ManageMBCategories, "MBCIndex")
                    </td>
                </tr>
                <tr>
                    <td class="arrowLink">
                        @Html.ActionLink(Resources.MasterBudget_Index_ManageMBProjections, "MBPIndex")
                    </td>
                    <td class="arrowLink">
                        @Html.ActionLink(Resources.Global_String_GLMasterBudget, "GLMasterBudget")
                    </td>
                </tr>
            </table>            
        </div>
    </div>
    <br />
    <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
            <td width="50%" align="center"><div id="popupDiv" class="popup" style="display: none;"></div></td><td width="50%"></td>
        </tr>
    </table>    
    <div id="loading" style="display:none; color:Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <div id="budgetDiv">
        <!-- Content goes here-->
        @Html.Action("MBHeader")
    </div>
</div>