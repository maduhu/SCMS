@using SCMS.Resource
@model SCMS.Model.GeneralLedger
@{AjaxOptions ajaxOpts = new AjaxOptions { UpdateTargetId = "budgetDiv", LoadingElementId = "loading", HttpMethod = "Post", Url = Url.Action("SaveGL"),
    OnSuccess="HidePopupDiv"};}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm(ajaxOpts))
{ 
    <table>
        <tbody>            
            <tr>
                <td align="right">@Resources.MasterBudget_CreateGL_GLCode<font color="red">*</font>:</td>
                <td>
                    @Html.TextBoxFor(model => model.Code)<br />
                    @Html.ValidationMessageFor(model => model.Code, Resources.Global_String_Required)
                </td>
            </tr>
            <tr>
                <td align="right">@Resources.Global_String_Description<font color="red">*</font>:</td>
                <td>
                    @Html.EditorFor(model => model.Description)<br />
                    @Html.ValidationMessageFor(model => model.Description, Resources.Global_String_Required)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.HiddenFor(p => p.Id)
                    @Html.HiddenFor(p => p.MasterBudgetCategoryId)
                    <input type="submit" value="@Resources.Global_String_Save" />&nbsp;
                    <input type="button" value="@Resources.Global_String_Cancel" onclick="javascript:CloseDialog()" />
                </td>
            </tr>
         </tbody>
    </table>
}  