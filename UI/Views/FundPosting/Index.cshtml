@using SCMS.Resource
@{
    ViewBag.Title = Resources.FundPosting_Index_Title;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="rfpMain" class="contentMain">
<div class="contentHeader">
    <div class="headerText">
        <h3 class="title-left">
            @Resources.FundPosting_Index_Header</h3>
    </div>
    <div style="font-size: 13px; text-align: left;">
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td class="arrowLink">
                    @Ajax.ActionLink(Resources.FundPosting_Index_ViewPosting, "FundPostingList", new AjaxOptions
                        {
                            UpdateTargetId = "FundPostingDiv",
                            LoadingElementId = "loading",
                            Url = Url.Action("FundPostingList"),
                            OnSuccess = "initPostFundsView(0);"
                        })
                </td>            
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
        </table>
    </div>
</div>
<br />
<div id="loading" style="display: none; color: Blue; font-weight: bold;">
    <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
</div>
<div id="FundPostingDiv">
    <!-- Content goes here-->
    @Html.Action("FundPostingList")
</div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        initPostFundsView(0);
    });
</script>

