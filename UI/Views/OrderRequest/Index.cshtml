@using SCMS.Resource
@{    
    ViewBag.Title = Resources.Global_String_OrderRequests + " - " + Resources.Global_String_SupplyChainManagementSystem;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="orderRequestsMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">
                @Resources.Global_String_OrderRequests</h3>
        </div>
        <div style="font-size: 13px; text-align: left;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    @if (UserContext.HasPermission(StandardPermissionProvider.OrderRequestManage))
                    {
                        <td class="arrowLink" title="@Resources.OrderRequest_Index_CreateNewOR">
                            @Ajax.ActionLink(Resources.Global_String_AddNew, "LoadOrderRequest", new AjaxOptions
                            {
                                UpdateTargetId = "requestDiv",
                                LoadingElementId = "loading",
                                Url = Url.Action("LoadOrderRequest")
                            })
                        </td>
                        @*<td class="arrowLink" title="@Resources.OrderRequest_Index_CreateORFromPP">
                            @Ajax.ActionLink(Resources.OrderRequest_Index_AddNewORFromPP, "LoadOrderRequest", new { fromPP = true }, new AjaxOptions
                            {
                                UpdateTargetId = "requestDiv",
                                LoadingElementId = "loading"
                            })
                        </td>*@
                    }
                    else
                    { 
                        <td>&nbsp;</td>
                    }
                </tr>
                <tr>
                     <td class="arrowLink">
                        @Ajax.ActionLink(Resources.OrderRequest_Index_ViewOrderRequests, "Index", new { id = "ViewOrderRequests" }, new AjaxOptions
                   {
                       UpdateTargetId = "requestDiv",
                       LoadingElementId = "loading",
                       Url = Url.Action("ViewOrderRequests")
                   })
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />    
    <div id="loading" style="display: none; color: Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <div id="requestDiv" style="padding-left: 2px;">
        <!-- Content goes here-->
        @Html.Action("ViewOrderRequests")
    </div>
</div>
