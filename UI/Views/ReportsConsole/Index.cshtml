@using SCMS.Resource
@{
    ViewBag.Title = Resources.ReportConsole_Index_Title;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}
<div class="row">
    <div class="twelve columns">
        <h3 style="text-align: center;">
            @Resources.ReportConsole_Index_Header.ToUpper()
        </h3>
    </div>
</div>
<div class="row">
    <div class="four columns">
        <div class="box">
            <div class="box-header">
                @Resources.Global_String_OrderRequests</div>
            <div class="box-content">
                <ol>
                    <li><a href="/Analytics/OrderRequest/" title="@Resources.ReportConsole_Index_NoOfORsMsg">
                        @Resources.ReportConsole_Index_OverviewSummaries </a></li>
                </ol>
            </div>
        </div>
        <div class="box">
            <div class="box-header">@Resources.Global_String_Inventory</div>
            <div class="box-content">
            </div>
        </div>
    </div>
    <div class="four columns">
        <div class="box">
            <div class="box-header">
                @Resources.Global_String_PurchaseOrders</div>
            <div class="box-content">
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                @Resources.ReportConsole_Index_SystemReports</div>
            <div class="box-content">
            </div>
        </div>
    </div>
    <div class="four columns">
        <div class="box">
            <div class="box-header">@Resources.ReportConsole_Index_BudgetAnalysis</div>
            <div class="box-content">
                @Resources.Global_String_ComingSoon
            </div>
        </div>
    </div>
</div>
