@using SCMS.Resource
@model SCMS.Model.PurchaseOrder
@{AjaxOptions ajaxOpts = new AjaxOptions
  {
      UpdateTargetId = "PODiv",
      LoadingElementId = "loading",
      HttpMethod = "Post",
      Url = Url.Action("BackDatePO"),
      OnSuccess = "CloseDialog();"
  };}

<script src="@Url.Content("~/Scripts/js/jquery-1.7.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<table align="center" style="margin-left: auto; margin-right: auto;">
    <tr>
        <td align="center">
            <div style="width:auto; padding:6px; border:1px solid #A7B601; background:#fff; border-radius: 6px 6px 6px 6px; margin-left: auto; margin-right: auto;">
                @using (Ajax.BeginForm(null, null, ajaxOpts, new { @class = "form" }))
                {
                    @Html.ValidationSummary(true)
                    <h4>@Resources.PurchaseOrder_BackDatePO_BackDatePO :: @Model.RefNumber</h4>
                    <table border="0" cellpadding="2" cellspacing="0" width="400">
                        <tr>
                            <td width="40%" align="right">
                                @Resources.PurchaseOrder_BackDatePO_PODate<font color="red">*</font>:
                            </td>
                            <td width="60%">
                                @Html.EditorFor(m => m.PODate)
                                @Html.ValidationMessageFor(m => m.PODate, Resources.Global_String_Required)  
                                @Html.HiddenFor(m => m.Id)
                            </td>
                        </tr>                    
                        <tr>
                            <td width="40%" align="right">
                                @Resources.FleetManager_LoadFleetDetails_Reason:
                            </td>
                            <td width="60%">
                                @Html.TextAreaFor(m => m.BackDatingReason)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" class="btn green" value="@Resources.Global_String_Save" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </td>
    </tr>
</table>