@using SCMS.Resource
@{
    ViewBag.Title = Resources.VehicleMake_Index_Title;
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div id="InventoryMain" class="contentMain">
    <div class="contentHeader">
        <div class="headerText">
            <h3 class="title-left">
                @Resources.Global_String_VehicleMake</h3>
        </div>
        <div style="font-size: 13px; text-align: left;">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.VehicleMake_Index_AddNewMake, "LoadVMake", new AjaxOptions
                   {
                       UpdateTargetId = "popup-page",
                       LoadingElementId = "popup-loading",
                       OnBegin = string.Format("ShowDialogue('{0}')", Resources.VehicleMake_Index_AddNewMake),
                       OnSuccess = "CenterPopup"
                   })
                    </td>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.VehicleMake_Index_AddNewModel, "LoadVModel", new AjaxOptions
                   {
                       UpdateTargetId = "popup-page",
                       LoadingElementId = "popup-loading",
                       OnBegin = string.Format("ShowDialogue('{0}')", Resources.VehicleMake_Index_AddNewModel),
                       OnSuccess = "CenterPopup"
                   })
                    </td>
                </tr>
                <tr>
                    <td class="arrowLink">
                        @Ajax.ActionLink(Resources.VehicleMake_Index_ViewMake, "ViewVMake", new AjaxOptions
                       {
                           UpdateTargetId = "ContentDiv",
                           LoadingElementId = "loading",
                           OnSuccess = "if (document.getElementById('table') != null) {initSorter(); sorter.size(20); }"
                       })
                    </td>
                    <td class="arrowLink">
                        @Html.ActionLink(Resources.Global_String_BackToGlobalSettings, "Index", "GlobalSettings")
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div id="loading" style="display: none; color: Blue; font-weight: bold;">
        <img src="../../Content/images/loading_indicator.gif" alt="@Resources.Global_String_Processing" />
    </div>
    <div id="ContentDiv" style="padding-left: 2px;">
        <!-- Content goes here-->
        @Html.Action("ViewVMake")
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        if (document.getElementById('table') != null) {
            initSorter();
            sorter.size(20);
        }
    });
</script>
