@using SCMS.Resource
<div class="partialViewCard">
    <div class="partialViewCardHeader">
        <h3>
            @Resources.PasswordReset_LinkSent_PasswordResetRequest
        </h3>
    </div>
    <br />
    <h4 style="text-align:center;">@Resources.PasswordReset_LinkSent_LinkSentMsg</h4>
    <p style="text-align: center;">
        @Resources.PasswordReset_LinkSent_InstructionsMsg<br />
        <i style="font-style: italic; font-size: 11px; font-weight: bold;">@Resources.PasswordReset_LinkSent_LinkExpireMsg</i>
    </p>
    <form action="../" class="form">
        <table width="40%" align="center" border="0" cellpadding="2" cellspacing="2">
            <tr>
                <td width="100%" align="center">
                    <input type="submit" value="@Resources.PasswordReset_LinkSent_ContinueToLogin" class="btn tertiary" />
                </td>
            </tr>
        </table>
    </form>
    <br />
</div>